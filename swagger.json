{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Productos"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "producto",
      "description": "Operaciones sobre productos"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/product": {
      "post": {
        "tags": [
          "product"
        ],
        "summary": "Agrega un nuevo producto",
        "operationId": "addProcuct",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "type": "string",
            "name": "query",
            "description": "Nombre de la categoria que desea filtrar(opcional)",
            "required": false
          },
          {
            "in": "body",
            "name": "body",
            "description": "Producto nuevo que necesita ser a√±adido",
            "required": true,
            "schema": {
              "$ref": "#/definitions/product"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "product": {
      "type": "object",
      "properties": {
        "nombre": {
          "type": "string"
        },
        "categoria": {
          "type": "string"
        },
        "sabor": {
          "type": "string"
        },
        "precio": {
          "type": "integer",
          "format": "int64"
        },
        "estado": {
          "type": "boolean",
          "description": "Product status"
        }
      },
      "xml": {
        "name": "product"
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "boolean"
        },
        "status": {
          "type": "integer",
          "format": "int32"
        },
        "body": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}